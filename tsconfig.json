{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": "./", // Base directory to resolve non-relative module names
    "paths": {
      "*": ["src/*", "node_modules/*", "types/*"] // Adjust according to your source folders
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true
  },
  "include": ["src/**/*"]
}
